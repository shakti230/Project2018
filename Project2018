In [24]:
import seaborn as sns

In [25]:
# relationship between the two attributes ( sepal) for each class

sns.set_style('whitegrid')
sns.FacetGrid(iris_dataset, hue = 'class', size = 6)\
.map(plt.scatter, 'sepal-length', 'sepal-width')\
.add_legend()
plt.show()
 
In [26]:
# relationship between the two attributes ( petal) for each class
sns.set_style('whitegrid')
sns.FacetGrid(iris_dataset, hue = 'class', size = 6)\.map(plt.scatter, 'petal-length', 'petal-width')\.add_legend()plt.show()

 
In [27]:
# correlation between the attributes
plt.figure(figsize=(7,5)) 
sns.heatmap(iris_dataset.corr(),annot=True,cmap='RdYlGn_r') 
plt.show()

 
